<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/game_settings_generic"/>
    
    <CheckBox android:id="@+id/check_auto_throw_after_ting"
        android:text="@string/check_auto_throw_after_tinged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <CheckBox android:id="@+id/check_auto_hu_after_ting"
        android:text="@string/check_auto_hu_after_tinged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <CheckBox android:id="@+id/check_auto_hu_self_after_ting"
        android:text="@string/check_auto_hu_self_after_tinged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>