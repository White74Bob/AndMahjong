<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView android:id="@+id/game_label"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"/>

    <LinearLayout android:background="@color/darkorange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <Button android:id="@+id/game_introduction"
            android:textSize="14sp"
            android:focusable="false"
            android:text="@string/game_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <Button android:id="@+id/game_settings"
            android:textSize="14sp"
            android:focusable="false"
            android:text="@string/game_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
</RelativeLayout>