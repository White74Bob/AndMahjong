<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/game_settings_generic"/>
    
    <CheckBox android:id="@+id/check_feng_available"
        android:text="@string/check_feng_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <CheckBox android:id="@+id/check_chi_supported"
        android:text="@string/check_chi_supported"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <CheckBox android:id="@+id/check_only_hu_self"
        android:text="@string/check_only_hu_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>