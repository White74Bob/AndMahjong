<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/hued_tile_background"
            android:layout_width="@dimen/hu_tile_width_ver"
            android:layout_height="@dimen/hu_tile_height_ver" />

        <ImageView
            android:id="@+id/tile_front"
            android:layout_width="@dimen/hu_tile_width_ver"
            android:layout_height="@dimen/hu_tile_height_ver"
            android:background="@drawable/bg_vertical"
            android:contentDescription="@string/tile_front_at_bottom" />
    </RelativeLayout>

</LinearLayout>