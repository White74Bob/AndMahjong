<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/tile_front"
        android:layout_width="@dimen/tile_width_hor"
        android:layout_height="@dimen/tile_height_hor"
        android:background="@drawable/bg_left"
        android:contentDescription="@string/tile_front_at_left" />

    <View
        android:id="@+id/tile_indicator_left"
        style="@style/tile_indicator"
        android:layout_width="@dimen/tile_indicator_thickness"
        android:layout_height="@dimen/tile_height_hor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <!-- 
    <TextView
        android:id="@+id/tile_text"
        style="@style/tile_text"
        android:layout_alignBottom="@id/tile_front"/>
    -->
    <TextView
        android:id="@+id/tile_text"
        style="@style/tile_text"
        android:layout_centerInParent="true"/>
    
    <TextView
        android:id="@+id/tile_match_all_text"
        style="@style/tile_match_all"
        android:layout_alignBottom="@id/tile_front"
        android:layout_alignEnd="@id/tile_front"
        android:layout_alignRight="@id/tile_front"/>
    
    <TextView
        android:id="@+id/tile_special"
        style="@style/tile_special"
        android:layout_alignRight="@id/tile_front"
        android:layout_alignEnd="@id/tile_front"/>

</RelativeLayout>