<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:layout_centerInParent="true">
    
    <!-- Table Row 1 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView />
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/text_location_top" style="@style/location_text_horizontal"/>
            
            <View android:id="@+id/location_indicator_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/location_indicator_thickness"
                style="@style/location_indicator"/>
        </LinearLayout>
        <TextView />
    </TableRow>

    <!-- Table Row 2, separator -->
    <TableRow android:layout_width="match_parent"
        android:layout_height="@dimen/table_row_separator_thickness">
    </TableRow>
    
    <!-- Table Row 3 -->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            
            <TextView android:id="@+id/text_location_left"
                style="@style/location_text_vertical"/>
            
            <View android:id="@+id/location_indicator_left"
                android:layout_width="@dimen/location_indicator_thickness"
                android:layout_height="match_parent"
                style="@style/location_indicator"/>
        </LinearLayout>
        
        
        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            
            <TextView android:id="@+id/game_label" style="@style/game_label"/>

            <Button
                android:id="@+id/button_volume_on"
                android:layout_width="@dimen/ic_size_volume"
                android:layout_height="@dimen/ic_size_volume"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/volume_on"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_volume_off"
                android:layout_width="@dimen/ic_size_volume"
                android:layout_height="@dimen/ic_size_volume"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/volume_off"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
        
        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <View android:id="@+id/location_indicator_right"
                android:layout_width="@dimen/location_indicator_thickness"
                android:layout_height="match_parent"
                style="@style/location_indicator"/>
            
            <TextView android:id="@+id/text_location_right" style="@style/location_text_vertical"/>
            
        </LinearLayout>
        
    </TableRow>

    <!-- Table Row 4, separator -->
    <TableRow android:layout_width="match_parent"
        android:layout_height="@dimen/table_row_separator_thickness" >
    </TableRow>
    
    <!-- Table Row 5 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView />
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View android:id="@+id/location_indicator_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/location_indicator_thickness"
                style="@style/location_indicator"/>
            
            <TextView android:id="@+id/text_location_bottom" style="@style/location_text_horizontal"/>

        </LinearLayout>
        <TextView/>
    </TableRow>
</TableLayout>
